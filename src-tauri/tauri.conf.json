{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PcPocket",
  "version": "0.2.0",
  "identifier": "com.pcpocket.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PcPocket",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },

  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["pcpocket"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
