{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "store:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-copy-file",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$HOME/Documents/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-create",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$HOME/**"
        },
        {
          "path": "$HOME/Documents/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$APPCONFIG/*"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    "notification:default",
    "clipboard-manager:allow-write-text"
  ]
}